{
    "name": "xivdyetools-core",
    "version": "1.3.4",
    "description": "Core color algorithms and dye database for XIV Dye Tools",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "npm run build:version && npm run build:locales && tsc && npm run copy:locales",
        "build:version": "tsx scripts/generate-version.ts",
        "build:locales": "tsx scripts/build-locales.ts",
        "copy:locales": "tsx scripts/copy-locales.ts",
        "prebuild": "npm run build:locales",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:integration": "vitest run src/__tests__/integration",
        "test:coverage": "vitest run --coverage",
        "test:coverage:watch": "vitest --coverage",
        "test:coverage:ui": "vitest --coverage --ui",
        "test:threshold": "vitest run --coverage --reporter=verbose",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "docs": "typedoc",
        "docs:watch": "typedoc --watch",
        "prepublishOnly": "npm run build",
        "prepare": "husky install || true"
    },
    "keywords": [
        "ffxiv",
        "final-fantasy-xiv",
        "color",
        "dye",
        "harmony",
        "accessibility",
        "colorblind",
        "color-theory",
        "rgb",
        "hsv",
        "universalis"
    ],
    "author": "Flash Galatine",
    "license": "MIT",
    "homepage": "https://github.com/FlashGalatine/xivdyetools-core#readme",
    "bugs": {
        "url": "https://github.com/FlashGalatine/xivdyetools-core/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FlashGalatine/xivdyetools-core.git"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vitest/coverage-v8": "^4.0.14",
        "csv-parse": "^5.5.0",
        "eslint": "^8.55.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "tsx": "^4.7.0",
        "typedoc": "^0.28.14",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.3.2",
        "vitest": "^4.0.13",
        "yaml": "^2.3.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}